{
  "name": "clipmac",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.najmiter.clipmac",
    "mac": {
      "target": "dmg",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "clipboard",
    "macos"
  ],
  "author": "Najam",
  "license": "MIT",
  "description": "Clipboard on MacOS the way it should have been (minus the javascript part)",
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  }
}
